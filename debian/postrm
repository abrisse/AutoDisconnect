#!/bin/sh
# postrm script for autodisconnect
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge)
        echo "Removing configuration ..."
        gconftool-2 --recursive-unset /apps/autodisconnect
        [[ -e /var/log/autodisconnect.log ]] && rm -f /var/log/autodisconnect.log
    ;;

    remove|abort-install|upgrade|failed-upgrade|abort-upgrade|disappear)
        echo "Removing network triggers ..."
        [[ -e /etc/network/if-up.d/99_autodisconnect_network ]] && rm -f /etc/network/if-up.d/99_autodisconnect_network
        [[ -e /etc/event.d/autodisconnect ]] && {
            initctl stop autodisconnect
            rm -f /etc/event.d/autodisconnect
        }     
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


